<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.monari.movixs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movix"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.monari.movixs.ui.PopularMoviesActivity"
            android:exported="false" /> <!-- <activity -->
        <!-- android:name=".ui.MoviesDetailActivity" -->
        <!-- android:exported="false" -->
        <!-- /> -->
        <activity
            android:name="com.monari.movixs.ui.FavoritesActivity"
            android:exported="false" />

        <activity
            android:name="com.monari.movixs.ui.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.monari.movixs.MoviesActivity"
            android:exported="false" />
        <activity
            android:name="com.monari.movixs.ui.SignupActivity"
            android:exported="false"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="com.monari.movixs.ui.LoginActivity"
            android:exported="false"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="com.monari.movixs.MainActivity"
            android:exported="true"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.monari.movixs.ui.MoviesDetailActivity">
            //additional data about RestaurantActivity
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.monari.movixs.MoviesActivity" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>