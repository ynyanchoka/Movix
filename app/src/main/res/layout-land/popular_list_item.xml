<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/moviesListLayout"
    android:layout_height="wrap_content"
    tools:context=".ui.PopularMoviesActivity"
    android:background="#18172e">


    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewWidget"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#18172e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/popularImageView"
                android:layout_width="330dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/p14097646_p_v12_at"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="4dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_toRightOf="@id/cardViewWidget"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/cardViewWidget">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:fillViewport="true"
            android:scrollbars="none">


            <TextView
                android:id="@+id/overviewTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#18172e"
                android:fontFamily="@font/roboto"
                android:lineSpacingMultiplier="1.3"
                android:padding="10dp"
                android:text="Overview hello word"
                android:textColor="#CECDDF"
                android:textSize="16sp" />
        </ScrollView>
    </LinearLayout>

</RelativeLayout>