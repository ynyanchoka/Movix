<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moviesListLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#18172e">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorDivider"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="35dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movieImageView"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/clapperboard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleMovie"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="movie_name"
                android:textColor="@color/colorTextIcons"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto"
                app:layout_constraintStart_toEndOf="@+id/movieImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ratingMovies"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:inputType="textMultiLine"
                android:text="Rating"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                app:fontFamily="@font/roboto"
                app:layout_constraintStart_toEndOf="@+id/movieImageView"
                app:layout_constraintTop_toBottomOf="@+id/releaseDateTextview" />

            <TextView
                android:id="@+id/releaseDateTextview"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="36dp"
                android:text="Release date"
                android:textColor="@color/colorTextIcons"
                android:textSize="16sp"
                app:fontFamily="@font/roboto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/movieImageView"
                app:layout_constraintTop_toBottomOf="@+id/titleMovie" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>