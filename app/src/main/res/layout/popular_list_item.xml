<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/moviesListLayout"
    android:layout_height="wrap_content"
    tools:context=".ui.PopularMoviesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trending movies"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorPrimaryDark"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/colorDivider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/popularImageView"
                android:layout_width="162dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/clapperboard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleMoviePopular"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="movie_name"
                android:textColor="@color/colorTextIcons"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto"
                app:layout_constraintStart_toEndOf="@+id/popularImageView"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/ratingMoviesPopular"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:inputType="textMultiLine"
                android:text="Rating"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                app:fontFamily="@font/roboto"
                app:layout_constraintStart_toEndOf="@+id/popularImageView"
                app:layout_constraintTop_toBottomOf="@+id/releaseDatePopular" />

            <TextView
                android:id="@+id/releaseDatePopular"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="36dp"
                android:text="Release date"
                android:textColor="@color/colorTextIcons"
                android:textSize="16sp"
                app:fontFamily="@font/roboto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/popularImageView"
                app:layout_constraintTop_toBottomOf="@+id/titleMoviePopular" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>