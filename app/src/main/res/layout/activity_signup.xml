<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignupActivity"
    android:background="#18172e">

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="411dp"
        android:layout_height="941dp"
        android:scaleType="centerCrop"
        android:src="@drawable/luminousbackground" />

    <TextView
        android:id="@+id/WelcomeSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Welcome to Movix \n Sign up here"
        android:textAlignment="center"
        app:fontFamily="@font/roboto"
        android:textColor="@color/colorTextIcons"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WelcomeSignUp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:elevation="3dp"
        app:cardCornerRadius="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#B3FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/twotone_badge_black_18dp"
                android:drawablePadding="6dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="@color/colorDark"
                android:textColorHint="@color/colorSecondaryText"
                app:backgroundTint="@color/colorSecondaryText"
                app:fontFamily="@font/roboto" />


            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorSecondaryText"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorDark"
                android:textColorHint="@color/colorSecondaryText"
                app:fontFamily="@font/roboto"
                android:drawableLeft="@drawable/twotone_email_black_18dp"
                android:drawablePadding="6dp"/>

            <!--edit text for user password-->
            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userEmail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint = "@color/colorSecondaryText"
                android:hint="Password"
                app:fontFamily="@font/roboto"
                android:textColor="@color/colorDark"
                android:textColorHint="@color/colorSecondaryText"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/twotone_lock_black_18dp"
                android:drawablePadding="6dp"/>

            <Button
                android:id="@+id/idSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Sign up"
                android:layout_below="@id/userPassword"
                android:textAllCaps="false"
                android:textColor="@color/colorDark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:fontFamily="@font/roboto" />

            <Button
                android:id="@+id/idLoginButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/idSignUpButton"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/roboto"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/colorDark"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorDark"
                style="?android:attr/borderlessButtonStyle"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



