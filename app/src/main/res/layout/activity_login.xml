<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity"
    android:background="#18172e">

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="411dp"
        android:layout_height="941dp"
        android:scaleType="centerCrop"
        android:src="@drawable/luminousbackground" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Welcome Back"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorTextIcons"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Welcome"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:elevation="3dp"
        app:cardCornerRadius="12dp"
        android:inputType="textPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#26FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/idUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorSecondaryText"
                android:drawableLeft="@drawable/baseline_email_white_18dp"
                android:drawablePadding="6dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorTextIcons"
                android:textColorHint="@color/colorSecondaryText"
                app:fontFamily="@font/roboto" />

    <!--edit text for user password-->
    <EditText
        android:id="@+id/idUserPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idUserEmail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorSecondaryText"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/colorTextIcons"
        android:textColorHint="@color/colorSecondaryText"
        app:fontFamily="@font/roboto"
        android:drawableLeft="@drawable/baseline_lock_white_18dp"
        android:drawablePadding="6dp"/>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idUserPassword"
                android:layout_alignRight="@id/idUserPassword"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorSecondaryText"
                android:text="Forgot password?"
                android:textColor="@color/colorTextIcons"
                android:textSize="16sp"
                android:textColorHint="@color/colorSecondaryText" />


            <Button
                android:id="@+id/idLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idUserPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/btn"
                android:fontFamily="@font/roboto"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/colorDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimaryDark"
                app:cornerRadius="20dp" />

            <LinearLayout
                android:id="@+id/or"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@id/idLoginButton"
                android:layout_marginStart="80dp"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="5"
                    android:background="@color/colorPrimaryDark" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="OR"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextIcons"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="5"
                    android:background="@color/colorPrimaryDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/or"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="10dp">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDivider"
                    android:elevation="35dp"
                    android:src="@drawable/google"
                    android:layout_marginRight="20dp"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDivider"
                    android:elevation="35dp"
                    android:src="@drawable/facebook"
                    android:layout_marginRight="20dp"

                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDivider"
                    android:elevation="35dp"
                    android:src="@drawable/twitter__1_"
                    android:layout_marginRight="0dp"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/signUpButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/linearLayout"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/roboto"
                android:text="Don't have an account? Sign up"
                android:textAllCaps="false"
                android:textColor="@color/colorTextIcons"
                android:textSize="16sp"
                app:backgroundTint="@color/colorDivider" />


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/firebaseProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/darkdark"
                android:visibility="gone"/>



<!--                <ProgressBar-->
<!--                    android:id="@+id/firebaseProgressBar"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:visibility="gone" />-->

                <TextView
                    android:id="@+id/loadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firebaseProgressBar"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:textColor="@color/colorPrimaryText"
                    android:visibility="gone" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>